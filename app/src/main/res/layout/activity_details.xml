<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.materialme.DetailsActivity">

        <ImageView
            android:id="@+id/details_image"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:transitionName="robot"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/details_title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_alignBottom="@id/details_image"
            android:text="@string/title_placeholder" />

        <TextView
            android:id="@+id/details_news_title"
            android:layout_below="@id/details_image"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="?android:textColorSecondary"
            android:text="@string/news_placeholder" />

        <TextView
            android:id="@+id/details_subtitle"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_below="@id/details_news_title"
            android:text="@string/details_subtitle_placeholder" />

    </RelativeLayout>


</ScrollView>

